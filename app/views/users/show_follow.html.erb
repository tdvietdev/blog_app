<% provide(:title, @title) %>
<div class="row">
  <aside class="col-md-3">
    <section class="user_info">
      <%= gravatar_for @user %>
      <h2><%= @user.name %></h2>
      <span><%= link_to "view my profile", @user, class: "btn btn-success" %></span>
      <br>
      <span><b>Microposts:</b> <%= @user.entries.count %></span>
    </section>
    <section class="stats">
      <%= render "shared/stats" %>
      <% if @users.any? %>
        <div class="user_avatars">
          <% @users.each do |user| %>
            <%= link_to gravatar_for(user,"avatar_profile"), user %>
          <% end %>
        </div>
      <% end %>
    </section>
  </aside>
  <div class="col-md-9">
    <h3><%= @title %></h3>
    <% if @users.any? %>
      <ul class="users follow">
        <%= render @users %>
      </ul>
      <%= paginate @users, theme: "twitter-bootstrap-3" %>
    <% end %>
  </div>
</div>