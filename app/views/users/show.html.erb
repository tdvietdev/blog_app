<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
    <section class="stats">
      <%= render "shared/stats" %>
      <%= render "follow_form" if logged_in? %>
    </section>
    <%= link_to "New post", new_entry_path %>
  </aside>
  <div class="col-md-8">
    <% if @user.entries.any? %>
      <h3>Microposts (<%= @user.entries.count %>)</h3>
      <ol class="microposts">
        <%= render @entries %>
      </ol>
      <%= paginate @entries, theme: "twitter-bootstrap-3" %>
    <% end %>
  </div>
</div>