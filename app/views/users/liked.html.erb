<% provide(:title, @user.name) %>
<div class="row">
  <%= render "user_info" %>
  <div class="col-md-8">
    <% if @entries.any? %>
      <h3>Liked Post (<%= current_user.liking.count %>)</h3>
      <ol class="microposts">
        <%= render @entries %>
      </ol>
      <%= paginate @entries, theme: "twitter-bootstrap-3" %>
    <% end %>
  </div>
</div>