<% provide(:title, @user.name) %>
<div class="row">
  <%= render "user_info" %>
  <div class="col-md-8">
    <% if @entries.any? %>
      <h3><%= t ".post" %>(<%= Entry.actived(current_user).count %>)</h3>
      <ol class="microposts">
        <%= render "entries/mini_show" %>
      </ol>
      <%= paginate @entries, theme: "twitter-bootstrap-3" %>
    <% end %>
  </div>
</div>
