<% provide :title, @entry.title  %>
  <div class="row">
    <div class="col-lg-9">
      <h1><%= @entry.title %></h1>
      <p class="lead"><%= t ".by" %>
        <%= link_to @entry.user.name, user_path(@entry.user) %></p>
      <hr>
      <p><span class="glyphicon glyphicon-time"></span>  <%= t ".posted" %>
        <%= @entry.created_at.to_formatted_s(:long_ordinal) %> </p>
      <hr>
      <%= @entry.content.html_safe %>
      <hr>
      <%= render "like_form" %>
      <hr>
        <% if logged_in? %>
          <%= render "new_comment" %>
        <% else %>
          <%= link_to t(".login"), login_path, class: "center-text btn btn-success" %>
        <% end %>
    <div class="comment">

    </div>
      <hr>
      <%= render @comments %>
    </div>

    <div class="col-md-3">
      <div class="well">
        <h4>Blog Search</h4>
        <%= form_tag entries_path, method: "get", enforce_utf8: false do %>
          <div class="input-group">
            <%= text_field_tag :search, params[:search], class: "form-control" %>
            <span class="input-group-btn">
              <button class="btn btn-default" type="submit">
                <span class="glyphicon glyphicon-search"></span>
              </button>
            </span>
          </div>
        <% end %>
      </div>

      <div class="well">
        <h4 class="text-center">Same author</h4>
        <div class="row">
          <div class="col-lg-12">
            <ul class="list-unstyled">
              <%= render "same_author" %>
            </ul>
          </div>
        </div>
      </div>
    </div>

  </div>
  <hr>
